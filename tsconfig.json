{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"lib": ["dom", "dom.iterable", "ES2022"],
		"module": "ES2022",

		/* Bundler mode */
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"allowJs": false,
		"jsx": "react-jsx",
		"preserveSymlinks": true,
		"baseUrl": ".",
		"paths": {
			"@common-actors": ["./src/common_actors/index"],
			"@common-ui": ["./src/common_ui/index"],
			"@library/*": ["./src/bounded_contexts/library/*"],
			"@mock": ["./src/mock/index"]
		},

		/* Linting */
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["backend", "src"],
	"exclude": [
		"node_modules",
		"**/common_actors/",
		"**/ui/editor.tsx",
		"**/old/"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
