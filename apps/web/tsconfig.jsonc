{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		/* Bundler mode */
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"paths": {
			"~components": [
				"./src/components/index"
			],
			"~mock": [
				"./src/mock/index"
			],
			"~providers": [
				"./src/providers/index"
			]
		}
	},
	"include": [
		"src",
		"vite.config.mts"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}