{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		/* Bundler mode */
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"exactOptionalPropertyTypes": false,
		"baseUrl": ".",
		"paths": {
			"@localfirst/core/*": ["../../packages/core/src/*"],
			"~components": ["./src/components/index"],
			"~effect": ["./src/db.effect"],
			"~mock": ["./src/mock/index"],
			"~pages": ["./src/pages/index"],
			"~providers": ["./src/providers/index"]
		},
		"types": ["vite/client"]
	},
	"include": ["src", "vite.config.mts"]
}
